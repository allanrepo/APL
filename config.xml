<?xml version="1.0" encoding="UTF-8"?>

<APL_CONF>
	<CurrentSiteConfiguration>Singapore</CurrentSiteConfiguration>

	<SiteConfiguration name = "Singapore">
		<LotInfo>
			<File>b.txt</File>
			<Path>/home/localuser/Desktop/APL</Path>
		</LotInfo>
		<Binning state = "true">
			<BinType>soft</BinType> <!-- hard, soft -->	
			<TestType>wafer</TestType> <!-- final, wafer -->		
			<SocketType>tcp</SocketType>
			<IP>127.0.0.1</IP>
			<Port>54000</Port>
		</Binning>
		<Logging state = "true">
			<Path>/home/localuser/Desktop/</Path>
		</Logging>
		<STDF field = "MIR">
			<Field name = "LOT_ID">lotid</Field>
			<Field name = "PART_TYP">device</Field>
			<Field name = "OPER_NAM">operator</Field>
			<Field name = "FAMLY_ID">productid</Field>
			<Field name = "TST_TEMP">temperature</Field>
		</STDF>
		<STDF field = "SDR">
			<Field name = "HAND_ID">proberhandlerid</Field>
			<Field name = "LOAD_ID">boardid</Field>
		</STDF>
	</SiteConfiguration>

	<SiteConfiguration name = "Amkor">
		<LotInfo>
			<File>lotinfo.txt</File>
			<Path>/tmp</Path>
		</LotInfo>
		<Binning state = "true">
			<BinType>soft</BinType> <!-- hard, soft -->	
			<TestType>final</TestType> <!-- final, wafer -->		
			<SocketType>udp</SocketType>
			<IP>127.0.0.1</IP>
			<Port>4000</Port>
		</Binning>
		<Logging state = "true">
			<Path>/home/localuser/Desktop/</Path>
		</Logging>
	</SiteConfiguration>


</APL_CONF>
