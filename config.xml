<?xml version="1.0" encoding="UTF-8"?>

<APL_CONF>
	<CurrentSiteConfiguration>Singapore</CurrentSiteConfiguration>

	<SiteConfiguration name = "Singapore">
		<Launch>
			<Param name = "Type">prod</Param> <!-- prod, engr-->
			<Param name = "Wait Time To Launch">120</Param>
			<Param name = "Max Attempt To Launch">5</Param>
			<Param name = "Wait Time To End Lot">20</Param>
			<Param name = "Wait Time To Unload Program">20</Param>
		</Launch>
		<LotInfo>
			<File>b.txt</File>
			<Path>/home/localuser/Desktop/APL</Path>
		</LotInfo>
		<Binning state = "true">
			<BinType>soft</BinType> <!-- hard, soft -->	
			<TestType>wafer</TestType> <!-- final, wafer -->		
			<SocketType>tcp</SocketType>
			<IP>127.0.0.1</IP>
			<Port>54000</Port>
		</Binning>
		<Logging state = "true">
			<Path>/home/localuser/Desktop</Path>
		</Logging>
		<STDF state = "true" />
		<STDF field = "MIR">
			<Param name = "LOT_ID">lotid</Param>
			<Param name = "PART_TYP">device</Param>
			<Param name = "OPER_NAM">operator</Param>
			<Param name = "FAMLY_ID">productid</Param>
			<Param name = "TST_TEMP">temperature</Param>
		</STDF>
		<STDF field = "SDR">
			<Param name = "HAND_ID">proberhandlerid</Param>
			<Param name = "LOAD_ID">boardid</Param>
		</STDF>
	</SiteConfiguration>

	<SiteConfiguration name = "Amkor1">
		<LotInfo>
			<File>lotinfo.txt</File>
			<Path>/tmp</Path>
		</LotInfo>
		<Binning state = "true">
			<BinType>soft</BinType> <!-- hard, soft -->	
			<TestType>final</TestType> <!-- final, wafer -->		
			<SocketType>udp</SocketType>
			<IP>127.0.0.1</IP>
			<Port>4000</Port>
		</Binning>
		<Logging state = "true">
			<Path>/home/localuser/Desktop/</Path>
		</Logging>
	</SiteConfiguration>
	<SiteConfiguration name = "Amkor">
	</SiteConfiguration>

</APL_CONF>
